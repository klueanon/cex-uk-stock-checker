  smtp_username: "${GMAIL_USERNAME}"  # Set in environment: your.email@gmail.com
  smtp_password: "${GMAIL_APP_PASSWORD}"  # Set in environment: your-app-specific-password
  from_email: "${GMAIL_USERNAME}"  # Set in environment: your.email@gmail.com
  to_email: "${NOTIFICATION_EMAIL}"  # Set in environment: notifications@example.com 