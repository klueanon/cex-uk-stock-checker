items:
  - SHDDSYNDS1821P8BDL  # Example: Synology Disk Station DS1821+ 8bay NAS Enclosure
  - SHDDWD3TBWD30REDA   # Example: WD Red WD30EFRX 3TB NAS 3.5" SATA

request_delay: 1800  # 30 minutes in seconds
send_email_notification: true
send_email_enabled: true

store_ids: []  # Empty list to check general availability
proceed_prompt_enabled: false

email:
